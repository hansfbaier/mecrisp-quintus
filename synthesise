#!/bin/bash

# -----------------------------------------------------------------------------

if [[ -z "$1" || "$1" = "hx1k" ]]
then

echo "-------------------------------------------------------------------------------"
echo "  HX1K"
echo "-------------------------------------------------------------------------------"

cd hx1k/icestick-verilog
./compile
mv *.bin ../
cd ../..
fi

# -----------------------------------------------------------------------------

if [[ -z "$1" || "$1" = "hx8k" ]]
then

echo "-------------------------------------------------------------------------------"
echo "  HX8K"
echo "-------------------------------------------------------------------------------"

cd hx8k/breakout-verilog
./compile
mv *.bin ../
cd ../..
fi

# -----------------------------------------------------------------------------

if [[ -z "$1" || "$1" = "icebreaker" ]]
then

echo "-------------------------------------------------------------------------------"
echo "  Icebreaker"
echo "-------------------------------------------------------------------------------"

cd icebreaker/icebreaker-verilog
./compile
mv *.bin ../
cd ../..
fi

# -----------------------------------------------------------------------------

if [[ -z "$1" || "$1" = "ulx3s" ]]
then

echo "-------------------------------------------------------------------------------"
echo "  ULX3S"
echo "-------------------------------------------------------------------------------"

cd ulx3s/ulx3s-verilog
./compile
mv *.bin ../
cd ../..
fi

# -----------------------------------------------------------------------------

if [[ -z "$1" || "$1" = "ulx3s-pipeline" ]]
then

echo "-------------------------------------------------------------------------------"
echo "  ULX3S Pipeline"
echo "-------------------------------------------------------------------------------"

cd ulx3s-pipeline/ulx3s-verilog
./compile
mv *.bin ../
cd ../..
fi

# -----------------------------------------------------------------------------

if [[ -z "$1" || "$1" = "ulx3s-pipeline-compressed" ]]
then

echo "-------------------------------------------------------------------------------"
echo "  ULX3S Pipeline Compressed"
echo "-------------------------------------------------------------------------------"

cd ulx3s-pipeline-compressed/ulx3s-verilog
./compile
mv *.bin ../
cd ../..
fi

# -----------------------------------------------------------------------------
